<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<div class="float-right"> 
    <td><%= link_to 'Novo Cliente', new_client_path, class: "btn btn-primary active" %></td>
</div>


<div class="float-right">
    <td><%= link_to 'Relatorio', report_clients_path(@client, @contact), class: "btn btn-info active" %></td>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Telefone</th>
      <th scope="col">Data Cadastro</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.created_at.strftime('%d/%m/%Y %H:%M') %></td>
       
        <td><%= link_to 'Contatos', client_contacts_path(client) %></td>
        
        <td><%= link_to 'Editar', edit_client_path(client), class: "btn btn-primary btn-sm active"  %></td>
        <td><%= link_to 'Remover', client, method: :delete, data: { confirm: 'VocÃª em certeza?'}, class: "btn btn-danger btn-sm active"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
